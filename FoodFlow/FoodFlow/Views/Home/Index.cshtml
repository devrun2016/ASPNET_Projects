@model FoodFlow.Models.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="container-fluid d-flex justify-content-center align-items-center mt-5">
    <form asp-action="SignIn" method="post" class="w-25">
        <div class="form-group">
            <label asp-for="Email" class="fs-4"></label>
            <input asp-for="Email" class="form-control fs-4 p-2" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password" class="fs-4"></label>
            <input asp-for="Password" type="password" class="form-control fs-4 p-2" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-5 fs-2 p-2">Sign In</button>
    </form>
</div>


@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

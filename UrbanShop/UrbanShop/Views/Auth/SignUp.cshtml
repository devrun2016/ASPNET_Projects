@model UrbanShop.Models.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up  | Urban Shop the best online store";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="text-center col-md-6 col-lg-4">
        <h3 class="fw-bold mb-3" style="font-size: 2.4rem;">Sign Up</h3>
        <p class="mb-5 pb-3">Create a new Urban Shop account</p>

        <!-- Form 시작 -->
        <form asp-controller="Auth" asp-action="SignUp" method="POST">
            <div class="form-floating mt-4">
                <input asp-for="Customer_Name" class="form-control" id="fullName" placeholder=" " required />
                <label for="fullName"><i class="bi bi-person-fill"></i> Full name</label>
                <span asp-validation-for="Customer_Name" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="User_Account" class="form-control" id="userAccount" placeholder=" " required />
                <label for="userAccount"><i class="bi bi-person-circle"></i> User Account</label>
                <span asp-validation-for="User_Account" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Customer_Email" class="form-control" id="emailAddress" placeholder=" " required />
                <label for="emailAddress"><i class="bi bi-envelope-fill"></i> Email Address</label>
                <span asp-validation-for="Customer_Email" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Customer_Phone" class="form-control" id="phone" placeholder=" " required />
                <label for="phone"><i class="bi bi-telephone-fill"></i> Phone Number</label>
                <span asp-validation-for="Customer_Phone" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="User_Password" class="form-control" id="password" placeholder=" " required type="password" />
                <label for="password"><i class="bi bi-lock-fill"></i> Password</label>
                <span asp-validation-for="User_Password" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder=" " required type="password" />
                <label for="confirmPassword"><i class="bi bi-lock-fill"></i> Confirm password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark w-100 mt-5">Submit</button>
        </form>
        <!-- Form 끝 -->

        <p class="mt-3">Already have an account?</p>
        <a asp-controller="Auth" asp-action="Index" class="btn bg-white border-dark w-100 mt-2">Sign In</a>
    </div>
</div>



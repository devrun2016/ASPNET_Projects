<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrbanShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UrbanShop.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css" />
</head>
<body>
    <header class="border-bottom">
        <div class="container-fluid d-flex justify-content-end">
            <!-- Login and Sign Up links -->
            <div class="d-flex me-5 mt-5">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Logout Button -->
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn text-dark fw-bold text-decoration-none me-5">
                            <i class="bi bi-box-arrow-right fs-3 me-2"></i>
                            <span class="fs-4">Logout</span>
                        </button>
                    </form>
                }
                else
                {
                    <!-- Login Button -->
                    <a asp-controller="Auth" asp-action="Index" class="text-dark me-3 fw-bold text-decoration-none me-5">
                        <i class="bi bi-person-circle fs-3 me-2"></i>
                        <span class="fs-4">Account</span>
                    </a>
                }
                <a href="#" class="text-dark me-3 fw-bold text-decoration-none me-5">
                    <i class="bi bi-heart fs-3 me-2"></i> <span class="fs-4">Wishlist</span>
                </a>
            </div>
        </div>


        <!-- Nav -->
        <nav class="navbar navbar-expand-lg bg-white pb-4">
            <!-- Logo -->
            <div class="container d-flex flex-column align-items-center pt-lg-4">
                <div class="container d-flex align-items-center justify-content-between position-relative">
                    <a class="navbar-brand mx-auto text-dark fw-bold position-absolute start-50 translate-middle-x" style="letter-spacing: 10px; font-size: 2.6rem;">
                        URBAN SHOP
                    </a>

                    <!-- Toggle -->
                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Nav Items -->
                <div class="collapse navbar-collapse justify-content-center pt-5" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item  m-1 mx-3">
                            <a class="nav-link fw-bold" style="color:red; font-size: 1.2rem;" href="#">Sale</a>
                        </li>
                        <li class="nav-item m-1 mx-3">
                            <a class="nav-link fw-bold" style="color: blue; font-size: 1.2rem;" href="#">New</a>
                        </li>
                        <li class="nav-item m-1 mx-3">
                            <a class="nav-link text-black" style="font-size: 1.2rem;" href="#">Girl</a>
                        </li>
                        <li class="nav-item m-1 mx-3">
                            <a class="nav-link text-black" style="font-size: 1.2rem;" href="#">Man</a>
                        </li>
                        <li class="nav-item m-1 mx-3">
                            <a class="nav-link text-black" style="font-size: 1.2rem;" href="#">Jeans</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Body -->
    <div class="container-fluid " style="padding-bottom: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted pb-5 mt-5" style="background-color: white; position: relative;">
        <div class="container d-flex flex-wrap justify-content-between">
            <div class="d-flex flex-column mb-4">
                <p class="fw-bold text-dark mb-2">Company</p>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">About Us</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Privacy Policy</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Terms Of Use</a>
            </div>

            <div class="d-flex flex-column mb-4">
                <p class="fw-bold text-dark mb-2">Contact</p>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Order Status</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">FAQs</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Size Guide</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Shipping</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Return</a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">Contact Us</a>
            </div>

            <div class="d-flex flex-column mb-4">
                <p class="fw-bold text-dark mb-2">SNS</p>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">
                    <i class="bi bi-instagram me-1"></i>Instagram
                </a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">
                    <i class="bi bi-facebook me-1"></i>Facebook
                </a>
                <a class="footer-link text-decoration-none text-muted mb-1" href="#">
                    <i class="bi bi-youtube me-1"></i>Youtube
                </a>
            </div>
        </div>
    </footer>

    <!-- Custom Style -->
    <style>
        .footer-link {
            font-size: 0.9rem;
            line-height: 2;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

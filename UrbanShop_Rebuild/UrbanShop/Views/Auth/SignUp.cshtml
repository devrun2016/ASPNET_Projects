@model UrbanShop.Models.AccountCustomerViewModel

@{
    ViewData["Title"] = "Sign Up | Urbanshop";
}

<div class="container-fluid justify-content-center mt-5">
    <h1 class="text-center fw-bold mt-4">Sign Up</h1>

    <form method="post" asp-action="SignUp" class="w-50 m-auto mt-5">
        <!-- Email Input -->
        <div class="input-group flex-nowrap mb-3">
            <span class="input-group-text p-2 fs-4 fw-bold" style="width: 150px;">Email</span>
            <input asp-for="ac_email" type="email" class="form-control fs-4" placeholder="Enter your email">
        </div>
        <span asp-validation-for="ac_email" class="text-danger"></span>
        
        <!-- Password Input -->
        <div class="input-group flex-nowrap mb-3">
            <span class="input-group-text p-2 fs-4 fw-bold" style="width: 150px;">Password</span>
            <input asp-for="ac_password" type="password" class="form-control fs-4" placeholder="Enter your password">
        </div>
        <span asp-validation-for="ac_password" class="text-danger"></span>

        <!-- Full Name Input -->
        <div class="input-group flex-nowrap mb-3">
            <span class="input-group-text p-2 fs-4 fw-bold" style="width: 150px;">Full Name</span>
            <input asp-for="ac_name" type="text" class="form-control fs-4" placeholder="Enter your full name">
        </div>
        <span asp-validation-for="ac_name" class="text-danger"></span>

        <!-- Phone Input -->
        <div class="input-group flex-nowrap mb-3">
            <span class="input-group-text p-2 fs-4 fw-bold" style="width: 150px;">Phone</span>
            <input asp-for="ac_phone" type="tel" class="form-control fs-4" placeholder="Enter your phone number without -">         
        </div>
        <span asp-validation-for="ac_phone" class="text-danger"></span>
        <!-- Sign Up Button -->
        <button type="submit" class="btn btn-dark w-100 fs-2 fw-bold p-2 rounded-pill mt-5">Sign Up</button>
    </form>

    <!-- Cancel Button -->
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-50 p-2 rounded-pill fs-2 fw-bold">Cancel</a>
    </div>
</div>

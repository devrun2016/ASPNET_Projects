<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrbanShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UrbanShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-fluid bg-black d-flex justify-content-end align-items-center pt-4">
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline ms-auto">
                    <button type="submit" class="bg-transparent border-0">
                        <span class="text-white fs-5 me-4">Sign Out</span>
                    </button>
                </form>

                <!-- 관리자 여부 확인 -->
                @if (ViewBag.IsManager == true)
                {
                    <a asp-controller="Manager" asp-action="Index" class="text-white text-decoration-none me-4 d-flex align-items-center">
                        <span class="ms-2 fs-5 text-white">Admin</span>
                    </a>
                }
            } else {
                <a asp-controller="Auth" asp-action="SignIn" class="text-white text-decoration-none me-4 d-flex align-items-center">
                    <span class="ms-2 fs-5 text-white">SignIn</span>
                </a>
            }

            <a href="#" class="text-white text-decoration-none  me-lg-5">
                Cart
            </a>
        </div>

        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-black">
            <div class="container-fluid d-flex flex-column justify-content-center align-items-center text-center">
                <a class="navbar-brand text-white fs-1 fw-bold" asp-controller="Home" asp-action="Index">URBANSHOP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">SALE</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">NEW</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">MEN</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">WOMEN</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">BAGS</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">WATCHES</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">MAKEUP</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white fs-4" href="#">EYEWEAR</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
